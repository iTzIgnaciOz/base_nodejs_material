{% extends dirServerLayoutViews + "/authentication" + viewFileExtension %}

{% block title %}
    {{pageTitle}}
{% endblock %}

{% block authenticationHeader %}
    <span>Sign in to your account</span>
{% endblock %}
{% block content %}
    <form class="form" role="form" action="#">
        <div class="form-group floating-label">
            <input type="text" class="form-control" id="regular2">
            <label for="regular2">Username</label>
        </div>
        <div class="form-group floating-label">
            <input type="password" class="form-control" id="password">
            <label for="password">Password</label>
        </div>

        <button type="submit" class="btn btn-info btn-raised btn-block">Sign in</button>
        <div class="authentication-body-footer margin-top-5">
            <div>
                <label>
                    <input class="checkbox checkbox-primary" type="checkbox" />
                    <span>Stay signed in</span>
                </label>
            </div>
            <div class="text-right">
                <a href="recovery">Forgot password?</a>
            </div>
        </div>
    </form>
{% endblock %}

{% block contentExtra %}
    <div class="text-center">
        Don't have an account? <a href="register" class="text-default-bright">Create an account</a>
    </div>
{% endblock %}

